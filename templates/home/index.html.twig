{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h3>Featured trips</h3>
    {% if trips is defined %}
        <table class="table">
            <tbody>
            {% for trip in trips %}
                <tr>
                    <td><b>NAME</b></td>
                    <td>{{ trip.name }}</td>
                </tr>
                <tr>
                    <td><b>DESTINATION</b></td>
                    <td>{{ trip.destination }}</td>
                </tr>
                <tr>
                    <td><b>PRICE</b></td>
                    <td>{{ trip.price }}</td>
                </tr>
                <tr>
                    <td><b>DESCRIPTION</b></td>
                    <td>{{ trip.description }}</td>
                </tr>
                <tr>
                    <td><b>DATE</b></td>
                    <td>{{ trip.date ? trip.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <td><b>AVAILABLE PLACES</b></td>
                    <td>{{ trip.availablePlaces }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No available trips</p>
    {% endif %}
{% endblock %}